pipeline{
    agent any
    tools {
        maven 'Maven'
    } 
    stages{
        stage("test"){
            steps{
                sh "mvn --version"
                echo "========executing A========"
            }
        }
        stage("build"){
            steps{
                sh ""mvn package
                echo "========executing A========"
            }
        }
        stage("deploy on test"){
            steps{
               deploy adapters: [tomcat9(alternativeDeploymentContext: '', credentialsId: 'tomcatserverdetails1', path: '', url: 'http://10.211.55.4:8081')], contextPath: '/app', war: '**/*.war'
                echo "========executing A========"
            }
        }
        stage("deploy on prod"){
            steps{
                echo "========executing A========"
            }
        }
    }
            post{
                always{
                    echo "========always========"
                }
                success{
                    echo "========A executed successfully========"
                }
                failure{
                    echo "========A execution failed========"
                }
            }
        }
    post{
        always{
            echo "========always========"
        }
        success{
            echo "========pipeline executed successfully ========"
        }
        failure{
            echo "========pipeline execution failed========"
        }
    }
}
